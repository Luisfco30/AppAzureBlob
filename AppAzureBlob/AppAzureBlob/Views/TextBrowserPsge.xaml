<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAzureBlob.Views.TextBrowserPsge">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Text File Browser"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>
            <Button
                x:Name="buttonGetTextFileList"
                Text="Get Text File List"
                Clicked="buttonGetTextFileList_Clicked"/>
            <Button
                x:Name="buttonGetTextFileList12"
                Text="Get Text File List 12"
                Clicked="buttonGetTextFileList12_Clicked"/>
            <ListView
                 x:Name="listViewFiles"
                ItemSelected="listViewFiles_ItemSelected"/>
            <Editor
                x:Name="editorPreview"
                HeightRequest="100"
                IsEnabled="False"/>
            <Button
                x:Name="buttonDelete"
                Text="Delete"
                Clicked="buttonDelete_Clicked"/>
            <Label
                x:Name="labelMessage"
                HorizontalOptions="Center"
                TextColor="Blue"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>